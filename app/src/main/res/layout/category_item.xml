<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/drawer_category_size"
        android:paddingStart="@dimen/category_side_padding"
        android:paddingEnd="@dimen/category_side_padding"
        android:paddingTop="@dimen/category_upper_lower_padding"
        android:paddingBottom="@dimen/category_upper_lower_padding"
        android:background="@color/background_main"
        android:layout_gravity="center_vertical"/>

</LinearLayout>